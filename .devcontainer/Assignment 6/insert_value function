def insert_value(arr, index, value):
    arr.insert(index, value)
    return arr

# Taking input
array = list(map(int, input("Enter the array elements separated by space: ").split()))
index = int(input("Enter the index where you want to insert the value: "))
value = int(input("Enter the value to insert: "))

# Calling the function and displaying the result
modified_array = insert_value(array, index, value)
print("Modified Array:", modified_array)
